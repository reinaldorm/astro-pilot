---
const { head, iconURL, sep } = Astro.props;
---

<div class="post-data">
    <div class="data-head">
        <h4 class="head-title">{head}</h4>
        <img src={iconURL} alt={head}>
    </div>
    <div class="data-body"><slot /></div>
    {sep ? <span class="data-sep"></span> : ""}
</div>

<style>
    .post-data:not(:last-child) {
        margin-bottom: 1.5rem;
    }

    .post-data {
        font-style: 1rem;
        font-weight: 400;
        line-height: 1.3rem;
        color: #06121f;
    }

    .data-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .head-title {
        font-style: 1rem;
        font-weight: 400;
        line-height: 1.3rem;
        color: #06121f;
        margin-bottom: 0.625rem;
    }

    .data-body {
        display: flex;
        flex-wrap: wrap;
        gap: 0.625rem;
        margin-bottom: 1.5rem;
    }

    .data-sep {
        height: 0.25rem;
        background-color: #eee;
        display: block;
    }
</style>
